<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScoreKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Theme.ScoreKeeper.Button</item>
        <item name="radioButtonStyle">@style/Theme.ScoreKeeper.RadioButton</item>
    </style>

    <style name="Theme.ScoreKeeper.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/purple_a400</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.ScoreKeeper.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.ScoreKeeper.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/teal_500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/yellow_a700</item>
    </style>

    <style name="Theme.ScoreKeeper.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/brown_900</item>
    </style>

    <style name="Theme.ScoreKeeper.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="switchMinWidth">55dp</item>
        <item name="switchPadding">20dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/deep_orange_a400</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>