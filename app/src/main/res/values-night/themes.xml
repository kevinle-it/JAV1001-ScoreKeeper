<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScoreKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Theme.ScoreKeeper.Toolbar</item>
    </style>

    <style name="Theme.ScoreKeeper.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/purple_200</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="Theme.ScoreKeeper.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/light_green_a400</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.ScoreKeeper.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_300</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>