<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScoreKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Modify default Toolbar Style on Application level. -->
        <item name="toolbarStyle">@style/Theme.ScoreKeeper.Toolbar</item>
        <!-- Apply Button Style on Application level. -->
        <item name="materialButtonStyle">@style/Theme.ScoreKeeper.Button</item>
        <!-- Apply Radio Button Style on Application level. -->
        <item name="radioButtonStyle">@style/Theme.ScoreKeeper.RadioButton</item>
    </style>

    <!-- Style for Toolbar/ActioBar. -->
    <style name="Theme.ScoreKeeper.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/purple_200</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <!-- Style for Team Names Text View. Apply to individual Views. -->
    <style name="Theme.ScoreKeeper.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/light_green_a400</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Style for Team Scores Text View. Apply to individual Views. -->
    <style name="Theme.ScoreKeeper.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_300</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Style for Increase & Decrease Buttons for both Teams. -->
    <style name="Theme.ScoreKeeper.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/amber_a400</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pink_500</item>
    </style>

    <!-- Style for Radio Buttons as change by factor for both Teams. -->
    <style name="Theme.ScoreKeeper.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/pink_200</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style for Switch Button to switch between Day & Night mode. Apply to an individual View. -->
    <style name="Theme.ScoreKeeper.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="switchMinWidth">55dp</item>
        <item name="switchPadding">20dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/orange_500</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>